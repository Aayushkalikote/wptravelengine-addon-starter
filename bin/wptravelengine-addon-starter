#!/usr/bin/env php
<?php

// Try to find the autoloader from different possible locations
$autoloadPaths = [
    __DIR__ . '/../vendor/autoload.php',     // Development
    __DIR__ . '/../../../autoload.php',      // Installed as dependency
];

$autoloadFound = false;
foreach ($autoloadPaths as $autoloadPath) {
    if (file_exists($autoloadPath)) {
        require $autoloadPath;
        $autoloadFound = true;
        break;
    }
}

if (!$autoloadFound) {
    fwrite(
        STDERR,
        'You need to set up the project dependencies using Composer:' . PHP_EOL .
        '    composer install' . PHP_EOL
    );
    exit(1);
}

use WPTravelEngine\AddonStarter\Console\Application;

$app = new Application();
$app->run();
